{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "../../dist/brightchain-api-lib",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/lib/controllers/user.spec.tx"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/test-setup.ts",
    "src/lib/testUtils.ts"
  ],
  "references": [
    {
      "path": "../brightchain-lib/tsconfig.lib.json"
    }
  ]
}