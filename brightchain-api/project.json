{
  "name": "brightchain-api",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "brightchain-api/src",
  "projectType": "application",
  "tags": ["type:app", "scope:api"],
  "implicitDependencies": ["brightchain-lib"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/brightchain-api",
        "format": ["cjs"],
        "bundle": false,
        "main": "brightchain-api/src/main.ts",
        "tsConfig": "brightchain-api/tsconfig.app.json",
        "assets": ["brightchain-api/src/assets"],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "brightchain-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "brightchain-api:build:development"
        },
        "production": {
          "buildTarget": "brightchain-api:build:production"
        }
      }
    },
    "serve-full": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": [
        "build",
        "brightchain-react:build"
      ],
      "options": {
        "buildTarget": "brightchain-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "brightchain-api:build:development"
        },
        "production": {
          "buildTarget": "brightchain-api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/brightchain-api"],
      "options": {
        "jestConfig": "brightchain-api/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
