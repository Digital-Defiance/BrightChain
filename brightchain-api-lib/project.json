{
  "name": "brightchain-api-lib",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "brightchain-api-lib/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:api"],
  "implicitDependencies": ["brightchain-lib", "brightchain-test-utils"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/brightchain-api-lib",
        "main": "brightchain-api-lib/src/index.ts",
        "tsConfig": "brightchain-api-lib/tsconfig.lib.json",
        "assets": ["brightchain-api-lib/*.md"]
      },
      "dependsOn": ["^build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "brightchain-api-lib/jest.config.ts",
        "passWithNoTests": true
      },
      "cache": true
    }
  }
}
